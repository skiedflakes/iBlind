<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ui.Connect_Device.Connect_Device_main">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"> <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Connect Arduino"
       android:id="@+id/btn_connect"
        android:gravity="center"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Status: "
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"/>

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Device: "
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"/>


        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_send"
            android:text="Save number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVED NUMBER:"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_receiver"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g 09456456456"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/btn_check_sms"
            android:text="Check Send SMS TO number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_check_video"
            android:text="Check Video Recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>